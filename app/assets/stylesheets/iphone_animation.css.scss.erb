


.iphone_animation {
	background-image:url("iphone_animation_sheet.png");
	background-position: center;
	background-repeat: no-repeat;
	height:630px;
	width:100%;
    -webkit-animation: play 10s steps(4) infinite;
       -moz-animation: play 10s steps(4) infinite;
        -ms-animation: play 10s steps(4) infinite;
         -o-animation: play 10s steps(4) infinite;
            animation: play 10s steps(4) infinite;
}

@-webkit-keyframes play {
   from { background-position: center 0px; }
     to { background-position: center -2520px; }
}

@-moz-keyframes play {
   from { background-position: center   0px; }
     to { background-position: center -2520px; }
}

@-ms-keyframes play {
   from { background-position: center    0px; }
     to { background-position: center -2520px; }
}

@-o-keyframes play {
   from { background-position: center    0px; }
     to { background-position: center -2520px; }
}

@keyframes play {
   from { background-position:  center   0px; }
     to { background-position: center -2520px; }
}
